{
  "name": "FirePHP4Chrome",
  "version": "0.9",
  "manifest_version": 2,
  "description": "Show FirePHP log messages in the Chrome Developer Console",
  "devtools_page": "html/devtools.html",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "icons": {
    "128": "images/icon_128.png"
  },
  "minimum_chrome_version": "21",
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    },
    "default_title": "FirePHP4Chrome: settings",
    "default_popup": "html/popup.html"
  }
}
